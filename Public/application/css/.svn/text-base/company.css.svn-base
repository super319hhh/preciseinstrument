*{
	margin: 0;
	padding: 0;
}
.main-pic{
	width: 100%;
}
.mc-title{
	width: 100%;
	height: 200px;
	margin: auto;
}
.mc-title h1{
	text-align: center;
	font-family: "微软雅黑";
	font-size: 32px;
	line-height: 200px;
	font-weight: 600;
}
.mc-map{
	width: 1000px;
	height: 600px;
	margin: 0 auto;
}
.mc-content{
	width: 974px;
	margin: 0 auto;
	background: #f9f9f9;
	padding: 2em;
	margin-bottom: 2em;
}

.mc-p-content{
	font-size: 1em;
	line-height: 30px;
}
@media (max-width: 991px) {
		.mc-title{
			width: 100%;
			height: 100px;
			margin: auto;
		}
		.mc-title h1{
			text-align: center;
			font-family: "微软雅黑";
			font-size: 32px;
			line-height: 100px;
			font-weight: 600;
		}
		.mc-map{
			width: 100%;
			height: 25em;
			margin: 0 auto;
			overflow: hidden;
			padding: 0px;
			}
	 }
