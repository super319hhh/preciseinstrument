<script type="text/javascript" src="__APPLICATION__/vendor/terseBanner/dist/jquery.terseBanner.min.js"></script>
<script type="text/javascript">
	$(document).ready(function() {
		$('#adaptive').terseBanner({
			adaptive: true,
			height: '500px',
			auto: 3000,
			useHover: true
		});
	});
	//计算Banner点击量
	$('#adaptive ul li').click(function () {
		var bannerId = {};
			bannerId['banner_id']=$(this).attr('attr-id');
		$.ajax({
			type:'post',
			data:bannerId,
			url:"__URL__/BannerClick",
			dataType:'json',
		});
	})
</script>
